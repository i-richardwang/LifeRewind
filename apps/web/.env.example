# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/liferewind

# API key for Collector authentication (must match LIFEREWIND_API_KEY in collector config)
LIFEREWIND_API_KEY=your-secret-api-key

# LLM Configuration (OpenAI API compatible)
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-llm-api-key
LLM_MODEL=gpt-4o
LLM_LANGUAGE=English

# Gmail OAuth2 (Google Cloud Console)
# Create credentials at: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/auth/gmail/callback

# Token encryption key (generate with: openssl rand -base64 32)
TOKEN_ENCRYPTION_KEY=your-32-byte-base64-key

# App URL (used for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000
